{
  "name": "svelte-wheel",
  "version": "0.0.1",
  "description": "A Wheel of Names clone built with SvelteKit",
  "author": "Gunnar Omander <gunnar@gomander.dev> (https://gomander.dev)",
  "license": "GPL-3.0-only",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "bp": "npm run build && npm run preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "npm run test:integration && npm run test:unit",
    "test:integration": "playwright test",
    "test:unit": "vitest",
    "generate-pwa-assets": "pwa-assets-generator --preset minimal-2023 static/images/icons/favicon.svg"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@skeletonlabs/skeleton": "^2.10.4",
    "@skeletonlabs/tw-plugin": "~0.4.0",
    "@sveltejs/adapter-node": "^5.2.11",
    "@sveltejs/kit": "^2.15.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@tailwindcss/forms": "~0.5.9",
    "@tailwindcss/typography": "~0.5.15",
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^22.10.2",
    "@vite-pwa/assets-generator": "~0.2.6",
    "@vite-pwa/sveltekit": "^0.6.6",
    "autoprefixer": "^10.4.20",
    "editorconfig": "^2.0.0",
    "postcss": "^8.4.49",
    "postcss-load-config": "^6.0.1",
    "svelte": "^5.16.0",
    "svelte-check": "^4.1.1",
    "svelte-dnd-action": "~0.9.53",
    "tailwindcss": "^3.4.17",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2",
    "vite": "^6.0.5",
    "vite-plugin-pwa": "~0.21.1",
    "vite-plugin-tailwind-purgecss": "~0.3.5",
    "vitest": "^2.1.8",
    "workbox-window": "^7.3.0"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.6.12",
    "@napi-rs/canvas": "~0.1.65",
    "browser-fs-access": "~0.35.0",
    "canvas-confetti": "^1.9.3",
    "firebase": "^11.1.0",
    "firebase-admin": "^13.0.2",
    "validate-color": "^2.2.4",
    "zod": "^3.24.1"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=8"
  }
}
